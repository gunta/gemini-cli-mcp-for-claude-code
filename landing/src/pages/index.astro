---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero';
import Features from '../components/Features';
import Demo from '../components/Demo';

// Preload critical assets
const criticalAssets = [
  '/grid.svg',
  '/favicon.svg',
];
---

<Layout title="Gemini CLI MCP for Claude - Supercharge Claude with Media Generation">
  <Fragment slot="head">
    {criticalAssets.map((asset) => (
      <link rel="preload" href={asset} as="image" />
    ))}
  </Fragment>
  
  <main>
    <Hero client:load />
    <Features client:visible />
    <Demo client:visible />
    
    <!-- Installation section -->
    <section class="py-24 bg-slate-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
            Get Started in Minutes
          </h2>
          <p class="text-xl text-slate-400 max-w-3xl mx-auto">
            Choose your preferred installation method
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
          <!-- DXT Installation -->
          <div class="bg-slate-800/50 backdrop-blur-sm border border-slate-700/50 rounded-2xl p-8">
            <h3 class="text-2xl font-semibold text-white mb-4">DXT (Recommended)</h3>
            <p class="text-slate-400 mb-6">
              The easiest way to install using Anthropic's official MCP server manager
            </p>
            <div class="bg-slate-950 rounded-lg p-4 mb-6">
              <code class="text-green-400">dxt install gemini-cli-mcp-for-claude</code>
            </div>
            <p class="text-sm text-slate-500">
              That's it! DXT handles all configuration automatically.
            </p>
          </div>
          
          <!-- Manual Installation -->
          <div class="bg-slate-800/50 backdrop-blur-sm border border-slate-700/50 rounded-2xl p-8">
            <h3 class="text-2xl font-semibold text-white mb-4">Manual Installation</h3>
            <p class="text-slate-400 mb-6">
              Clone the repository and build from source
            </p>
            <div class="bg-slate-950 rounded-lg p-4 space-y-2 text-sm">
              <div><code class="text-green-400">git clone https://github.com/gunta/gemini-cli-mcp-for-claude-code.git</code></div>
              <div><code class="text-green-400">cd gemini-cli-mcp-for-claude-code</code></div>
              <div><code class="text-green-400">npm install && npm run build</code></div>
            </div>
          </div>
        </div>
        
        <div class="text-center mt-12">
          <a
            href="https://github.com/gunta/gemini-cli-mcp-for-claude-code#readme"
            class="text-purple-400 hover:text-purple-300 transition-colors"
          >
            View full documentation →
          </a>
        </div>
      </div>
    </section>
    
    <!-- CTA section -->
    <section class="py-24 bg-gradient-to-b from-slate-900 to-slate-950 relative overflow-hidden">
      <div class="absolute inset-0">
        <div class="absolute inset-0 bg-gradient-to-r from-purple-600/20 to-blue-600/20 blur-3xl" />
      </div>
      
      <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
          Ready to Unlock Claude's Full Potential?
        </h2>
        <p class="text-xl text-slate-400 mb-8">
          Join developers who are creating amazing content with Claude + Gemini MCP
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="https://github.com/gunta/gemini-cli-mcp-for-claude-code"
            class="inline-flex items-center gap-2 px-8 py-4 rounded-lg bg-gradient-to-r from-purple-600 to-blue-600 text-white font-semibold hover:from-purple-700 hover:to-blue-700 transition-all duration-200 shadow-lg shadow-purple-500/25"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            View on GitHub
          </a>
          <a
            href="/docs"
            class="inline-flex items-center gap-2 px-8 py-4 rounded-lg bg-slate-800/50 backdrop-blur-sm border border-slate-700/50 text-white font-semibold hover:bg-slate-800/70 transition-all duration-200"
          >
            Read Documentation
          </a>
        </div>
      </div>
    </section>
    
    <!-- Footer -->
    <footer class="py-8 bg-slate-950 border-t border-slate-800">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col md:flex-row justify-between items-center gap-4">
          <div class="text-slate-400 text-sm">
            © 2024 Gemini CLI MCP for Claude. Not affiliated with Google or Anthropic.
          </div>
          <div class="flex gap-6">
            <a href="https://github.com/gunta/gemini-cli-mcp-for-claude-code" class="text-slate-400 hover:text-white transition-colors">
              GitHub
            </a>
            <a href="/docs" class="text-slate-400 hover:text-white transition-colors">
              Docs
            </a>
            <a href="https://github.com/gunta/gemini-cli-mcp-for-claude-code/issues" class="text-slate-400 hover:text-white transition-colors">
              Support
            </a>
          </div>
        </div>
      </div>
    </footer>
  </main>
</Layout>

<style>
  main {
    background-color: #0f172a;
  }
</style>